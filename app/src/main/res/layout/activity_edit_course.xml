<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCourseActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="394dp"
        android:layout_height="59dp"
        android:background="#F8C55E"
        android:gravity="center"
        android:text="Edit Course"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#CFB0B0"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="401dp"
        android:layout_height="527dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:background="#F4BC49"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Course Title"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/tertiary_text_dark" />

        <EditText
            android:id="@+id/etID"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Course ID"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/tertiary_text_dark" />

        <EditText
            android:id="@+id/etInstructor"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Instructor Name/ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etStart"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Start Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etEnd"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="End Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCreateC"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="#FF3636"
        android:fontFamily="sans-serif-medium"
        android:hapticFeedbackEnabled="false"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>