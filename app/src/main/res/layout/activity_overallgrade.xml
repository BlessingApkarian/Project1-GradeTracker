<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverallGradeActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="403dp"
        android:layout_height="606dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonCreateCourse"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_above="@+id/btnAssignments"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/btnAssignments"
        android:text="Create Course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAssignments"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="9dp"
        android:text="@string/btnAssignment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/buttonCreateCourse" />

    <Button
        android:id="@+id/btnDeleteCourse"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/buttonCreateCourse"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="17dp"
        android:layout_toStartOf="@+id/btnAssignments"
        android:text="Delete" />

</RelativeLayout>