<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverallGradeActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="427dp"
        android:layout_height="635dp"
        android:layout_above="@+id/buttonCreateCourse"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/holo_blue_light"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonCreateCourse"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/btnEditCourse"
        android:background="#2962FF"
        android:text="Create Course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDeleteCourse"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="11dp"
        android:background="#FF0707"
        android:text="Delete" />

    <Button
        android:id="@+id/btnEditCourse"
        android:layout_width="126dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="9dp"
        android:background="#FFC95B"
        android:text="@string/editcourse" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D50000"
        android:textSize="18sp" />

</RelativeLayout>