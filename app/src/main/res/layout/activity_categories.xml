<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Categories"
        android:textColor="#2196F3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/btnHomework"
        app:layout_constraintStart_toStartOf="@+id/btnHomework"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Projects"
        app:layout_constraintEnd_toEndOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/btnQuizes" />

    <Button
        android:id="@+id/btnHomework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="173dp"
        android:text="Homework"
        app:layout_constraintEnd_toEndOf="@+id/btnQuizes"
        app:layout_constraintStart_toStartOf="@+id/btnQuizes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQuizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Quizzes"
        app:layout_constraintEnd_toEndOf="@+id/btnProjects"
        app:layout_constraintStart_toStartOf="@+id/btnProjects"
        app:layout_constraintTop_toBottomOf="@+id/btnHomework" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>