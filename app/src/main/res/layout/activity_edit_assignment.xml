<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAssignmentActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="394dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:background="#F8C55E"
        android:gravity="center"
        android:text="Edit Assignment"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="375dp"
        android:layout_height="400dp"
        android:background="#F4BC49"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.172">

        <EditText
            android:id="@+id/etIDEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Assignment ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etTitleEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etDueEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Due Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etPointEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Total Points"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etEarnedEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Points Earned"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etCategoryEd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Category"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/btEditAssignment"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:background="#FF3636"
        android:text="Edit Assignment"
        android:textColor="#FFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>